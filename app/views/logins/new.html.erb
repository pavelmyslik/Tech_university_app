<div class="row mt-4">
  <div class="col-12"><h2 class="text-center">Log in</h2></div>
</div>

<div class="container">
  <%= form_with(scope: :logins, url: login_path, class: "shadow-lg p-3 mt-5 bg-white rounded") do |form| %>

    <div class="form-row">
      <div class="form-group col-md-5">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "Enter your email" %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-5">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
      </div>
    </div>

    <%= form.submit("Login", id: "btn1", class: "btn btn-primary mt-2") %>
  <% end %>
</div>
